<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-4 text-center bg-light py-4">
      
      <h2>Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mt-4">
          <%= f.label :email, class: "d-flex justify-content-start" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-2" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "p-1 my-2 bg-info text-white" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
